extends layout

block content
  .row
    .col-sm-10
      if report && report.fileName
        h2 This is the report for #{report.fileName}
        .row
          .col-sm-10
            h2 Report data
            table(class="table table-striped table-bordered table-condensed")
              thead
                tr
                  th File Name
                  th Description
                  th Report data
              tbody
                tr
                  td #{report.fileName}
                  td #{report.description}
                  td #{report.data}
      else
        h2 That report does not exist.

